<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.AppointmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2085DEF"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"
            android:paddingVertical="@dimen/dimen_16sp"
            android:text="@string/text_request_an_appointment"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="FECHA:"
            android:textColor="#E2085DEF"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/etPlannedDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="FECHA"
            android:inputType="date"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="HORA:"
            android:textColor="#E2085DEF"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etPlannedhour"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"

            android:clickable="true"
            android:focusable="false"
            android:hint="HORA"
            android:inputType="datetime"
            android:maxLines="1" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterAppointment"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#E2085DEF"
            android:fontFamily="@font/quicksand_bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:letterSpacing="0.1"
            android:text="@string/btn_register"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20sp" />

    </LinearLayout>

</FrameLayout>