<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".fragments.PaymentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Card Number"
            android:inputType="number"
            android:maxLength="16"
            android:selectAllOnFocus="false" />

        <EditText
            android:id="@+id/txt_month"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_below="@+id/txtCardNumber"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/border"

            android:ems="10"
            android:hint="Mes"
            android:inputType="number"
            android:maxLength="2" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_year"
            android:maxLength="2"
            android:hint="AÃ±o"
            android:background="@drawable/border"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_alignBaseline="@+id/txt_month"
            android:layout_alignBottom="@+id/txt_month"
            android:layout_toRightOf="@+id/txt_month"
            android:layout_toEndOf="@+id/txt_month"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_cvv"
            android:background="@drawable/border"
            android:layout_alignBottom="@+id/txt_year"
            android:layout_toRightOf="@+id/txt_year"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="CVV" />

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="14"
            android:layout_column="0"
            android:layout_below="@+id/txt_email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="31dp"
            android:text="Crear Token" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@drawable/border"
            android:id="@+id/txt_email"
            android:hint="Correo electronico"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/txt_month"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/kind_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_pay"
            android:layout_marginTop="49dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/message_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_pay"
            android:layout_marginTop="19dp"
            android:textSize="18sp" />

    </RelativeLayout>
</FrameLayout>