<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <TextView
        android:id="@+id/nav_cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2085DEF"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingVertical="@dimen/dimen_16sp"
        android:text="@string/text_title_fragment_cuenta"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_cliente_cuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_cuenta"
        />
    <TextView
        android:id="@+id/label_names"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"

        />
    <TextView
        android:id="@+id/info_names"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/label_names"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <TextView
        android:id="@+id/label_apellidopaterno"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Apellido Paterno:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_names"

        />
    <TextView
        android:id="@+id/info_apellido_paterno"
        android:layout_width="250dp"
        android:layout_height="23dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/label_apellidopaterno"
        app:layout_constraintTop_toBottomOf="@+id/info_names" />
    <TextView
        android:id="@+id/label_apellidomaterno"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label_apellidopaterno"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Apellido Materno:"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/info_apellido_materno"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/label_apellidomaterno"
        app:layout_constraintTop_toBottomOf="@+id/info_apellido_paterno" />
    <TextView
        android:id="@+id/label_telefono"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Celular:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_apellidomaterno" />
    <TextView
        android:id="@+id/info_telefono"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/label_telefono"
        app:layout_constraintTop_toBottomOf="@+id/info_apellido_materno" />
    <TextView
        android:id="@+id/label_email"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_telefono" />
    <TextView
        android:id="@+id/info_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/label_email"
        app:layout_constraintTop_toBottomOf="@+id/info_telefono" />

    <TextView
        android:id="@+id/label_RUC"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="RUC:"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_email" />

    <TextView
        android:id="@+id/info_RUC"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/info_email"
        app:layout_constraintStart_toEndOf="@+id/label_RUC"
        android:textSize="17dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_RUC"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:backgroundTint="#E2085DEF"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
